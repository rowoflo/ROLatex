\providecommand{\Ker}{\mathcal{N}} % Null Space
\providecommand{\Tr}{\text{Tr}} % Trace
\providecommand{\pd}[2]{\frac{\partial{#1}}{\partial{#2}}} % Partial derivative
\providecommand{\E}[1]{\mathbf{E}\left[#1\right]} % Expectation
\providecommand{\V}[1]{\mathbf{V}\left[#1\right]} % Variance

\providecommand{\U}{\mathcal{U}}

